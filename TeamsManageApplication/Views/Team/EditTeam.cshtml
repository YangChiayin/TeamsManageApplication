@model Teams.Entities.Team

@{
    ViewData["Title"] = "Edit Team";
}

<form asp-controller="Team" asp-action="ProcessEditRequest" method="post" enctype="application/x-www-form-urlencoded">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="DateCreated">Date created</label>
        <input type="datetime" asp-for="DateCreated" class="form-control" value="@Model.DateCreated?.ToString("d")" />
    </div>

    <input type="hidden" asp-for="TeamId" />

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-controller="Team" asp-action="GetAllTeams" class="btn btn-primary">Cancel</a>
</form>
